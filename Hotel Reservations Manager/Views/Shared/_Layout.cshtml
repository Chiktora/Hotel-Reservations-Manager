<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Reservations Manager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hotel_Reservations_Manager.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="d-flex wrapper">
        <!-- Sidebar -->
        <div class="sidebar bg-dark">
            <div class="sidebar-heading text-center py-4 text-white fs-4">
                <i class="fas fa-hotel me-2"></i>Hotel Manager
            </div>
            <div class="list-group list-group-flush my-3">
                <a asp-controller="Home" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                </a>
                <a asp-controller="Reservations" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-calendar-check me-2"></i>Reservations
                </a>
                <a asp-controller="Clients" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-users me-2"></i>Clients
                </a>
                <a asp-controller="Rooms" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-door-open me-2"></i>Rooms
                </a>
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-controller="Users" asp-action="Index" class="list-group-item list-group-item-action bg-transparent text-white">
                        <i class="fas fa-user-shield me-2"></i>Users
                    </a>
                }
                <a asp-controller="Home" asp-action="Privacy" class="list-group-item list-group-item-action bg-transparent text-white">
                    <i class="fas fa-shield-alt me-2"></i>Privacy
                </a>
            </div>
        </div>
        
        <!-- Page Content -->
        <div id="page-content-wrapper" class="bg-light">
            <nav class="navbar navbar-expand-lg navbar-light bg-white py-3 shadow-sm">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="menu-toggle">
                        <i class="fas fa-bars"></i>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <h5 class="ms-3 mb-0">@ViewData["Title"]</h5>
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </nav>

            <div class="container-fluid p-4">
                <main role="main">
                    @RenderBody()
                </main>
            </div>
            
            <footer class="bg-white text-center p-3 mt-auto shadow-sm">
                <div class="container">
                    &copy; @DateTime.Now.Year - Hotel Reservations Manager - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                </div>
            </footer>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        $("#menu-toggle").click(function(e) {
            e.preventDefault();
            $(".wrapper").toggleClass("toggled");
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
