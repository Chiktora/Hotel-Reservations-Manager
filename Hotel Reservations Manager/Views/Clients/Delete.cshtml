@model Hotel_Reservations_Manager.Data.Models.Client

@{
    ViewData["Title"] = "Delete Client";
}

<h1>Delete Client</h1>

<h3 class="text-danger">Are you sure you want to delete this client?</h3>
<div>
    <h4>@Model.FirstName @Model.LastName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">First Name</dt>
        <dd class="col-sm-9">@Model.FirstName</dd>
        
        <dt class="col-sm-3">Last Name</dt>
        <dd class="col-sm-9">@Model.LastName</dd>
        
        <dt class="col-sm-3">Phone Number</dt>
        <dd class="col-sm-9">@Model.PhoneNumber</dd>
        
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>
        
        <dt class="col-sm-3">Adult/Child</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.IsAdult ? "bg-primary" : "bg-info")">
                @(Model.IsAdult ? "Adult" : "Child")
            </span>
        </dd>
    </dl>
    
    @if (Model.ReservationClients != null && Model.ReservationClients.Any())
    {
        <div class="alert alert-warning">
            <strong>Warning!</strong> This client has @Model.ReservationClients.Count() associated reservations. Deleting this client will remove them from these reservations.
        </div>
    }
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div> 