@model Hotel_Reservations_Manager.Data.Models.Room

@{
    ViewData["Title"] = "Edit Room";
}

<h1>Edit Room</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="RoomNumber" class="control-label"></label>
                <input asp-for="RoomNumber" class="form-control" />
                <span asp-validation-for="RoomNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    @foreach (var type in ViewBag.RoomTypes)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Capacity" class="control-label"></label>
                <input asp-for="Capacity" class="form-control" min="1" max="10" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="AdultBedPrice" class="control-label"></label>
                <input asp-for="AdultBedPrice" class="form-control" />
                <span asp-validation-for="AdultBedPrice" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="ChildBedPrice" class="control-label"></label>
                <input asp-for="ChildBedPrice" class="form-control" />
                <span asp-validation-for="ChildBedPrice" class="text-danger"></span>
            </div>
            
            <div class="form-group form-check">
                <input asp-for="IsAvailable" class="form-check-input" />
                <label asp-for="IsAvailable" class="form-check-label"></label>
            </div>
            
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 